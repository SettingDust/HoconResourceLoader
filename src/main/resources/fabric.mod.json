{
  "schemaVersion": 1,
  "id": "${id}",
  "version": "${version}",
  "name": "${name}",
  "description": "${description}",
  "authors": [
    "${author}"
  ],
  "contact": {
    "homepage": "${source}",
    "sources": "${source}",
    "issues": "${source}/issues"
  },
  "license": "MIT",
  "icon": "assets/${id}/iconx64.png",
  "environment": "*",
  "accessWidener": "${id}.accesswidener",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "${group}.EntrypointKt::init"
      }
    ]
  },
  "mixins": [
    "${id}.mixins.json"
  ],
  "depends": {
    "fabricloader": "${fabric_loader}",
    "minecraft": "${minecraft}",
    "fabric-language-kotlin": "${fabric_kotlin}"
  },
  "recommends": {
    "modmenu": "${modmenu}"
  }
}
